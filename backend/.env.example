# ============================================
# CRM & Sales Management System - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --- Server ---
PORT=5000
NODE_ENV=development

# --- MongoDB ---
MONGO_URI=mongodb://localhost:27017/crm_db
# For MongoDB Atlas: mongodb+srv://<user>:<pass>@cluster.mongodb.net/crm_db

# --- JWT Secrets (use strong, random strings) ---
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_here
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_chars_here
JWT_REFRESH_EXPIRE=7d

# --- Email (Nodemailer) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=CRM System <noreply@crm.com>

# --- Frontend URL (for CORS and email links) ---
CLIENT_URL=http://localhost:3000

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# --- Admin Seeder ---
ADMIN_NAME=Super Admin
ADMIN_EMAIL=admin@crm.com
ADMIN_PASSWORD=Admin@123456
